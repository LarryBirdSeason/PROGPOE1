@{
    ViewData["Title"] = "Login";
}
<h2>Login (Prototype Role Selection)</h2>
<form asp-action="Login" method="post">
    <div class="form-group">
        <label for="role">Role</label>
        <select id="role" name="role" class="form-control">
            <option value="">Select Role</option>
            <option value="lecturer">Lecturer</option>
            <option value="coordinator">Programme Coordinator</option>
            <option value="manager">Academic Manager</option>
        </select>
    </div>
    <div class="form-group">
        <label for="name">Name</label>
        <input id="name" name="name" class="form-control" placeholder="Enter Name (Mock)" />
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>